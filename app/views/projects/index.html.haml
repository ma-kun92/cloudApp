%p#notice= notice
%h1 Items
%table
  %thead
    %tr
      %th Title
      %th Video
      %th{:colspan => "3"}
  %tbody
    - @items.each do |item|
      %tr
        %td= item.title
        %td= item.video
        %td= link_to 'Show', group_item_path(params[:group_id],item)
        %td= link_to 'Edit', edit_group_item_path(params[:group_id],item)
        %td= link_to 'Destroy', group_item_path(params[:group_id],item), method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Item', new_group_item_path(params[:group_id])
