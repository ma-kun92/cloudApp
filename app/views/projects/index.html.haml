%p#notice= notice
%h1 Projects
%table
  %thead
    %tr
      %th Title
      %th Video
      %th{:colspan => "3"}
  %tbody
    - @projects.each do |project|
      %tr
        %td= project.title
        %td= project.video
        %td= link_to 'Show', group_project_path(params[:group_id],project)
        %td= link_to 'Edit', edit_group_project_path(params[:group_id],project)
        %td= link_to 'Destroy', group_project_path(params[:group_id],project), method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Item', new_group_project_path(params[:group_id])
