= form_for @project, url: group_projects_path(params[:group_id]) do |form|
  - if @project.errors.any?
    #error_explanation
      %h2
        = pluralize(project.errors.count, "error")
        prohibited this project from being saved:
      %ul
        - project.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :title
    = form.text_field :title
  .field
    = form.label :video
    = form.file_field :video, :accept => 'image/*, video/*'
  .actions
    = form.submit
